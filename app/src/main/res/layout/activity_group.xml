<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.GroupActivity">
<EditText
    android:id="@+id/txt_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/group_search_hint"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_groups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>


        <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/txt_groups_no_item"
    android:layout_gravity="center"
    android:visibility="gone"/>

        <com.github.rahatarmanahmed.cpv.CircularProgressView
            android:id="@+id/cpv_groups"
            android:layout_width="@dimen/load_size"
            android:layout_height="@dimen/load_size"
            android:layout_gravity="center"
            android:visibility="gone"
            app:cpv_color="@color/colorPrimary"
            app:cpv_animAutostart="true"
            app:cpv_indeterminate="true"/>

    </FrameLayout>
</LinearLayout>